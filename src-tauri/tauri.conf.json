{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Table Clock",
  "version": "0.1.0",
  "identifier": "com.table-clock.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Table Clock",
        "width": 1100,
        "height": 440,
        "minWidth": 250,
        "minHeight": 440,
        "decorations": true,
        "hiddenTitle": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "files": {
          "/usr/share/README.md": "../README.md",
          "/usr/share/doc/{bundle-identifier}/LICENSE": "../LICENSE",
          "/usr/share/icons/hicolor/128x128/apps/{bundle-identifier}.png": "icons/128x128.png",
          "/usr/share/icons/hicolor/32x32/apps/{bundle-identifier}.png": "icons/32x32.png"
        }
      }
    },
    "android": {
      "versionCode": 100,
      "minSdkVersion": 28
    },
    "windows": {
      "wix": {
        "language": {
          "en-US": {
            "localePath": "wix/en-US.wxl"
          },
          "zh-TW": {
            "localePath": "wix/zh-TW.wxl"
          }
        }
      }
    }
  }
}